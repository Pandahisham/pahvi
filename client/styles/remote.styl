
@import 'nib'
@import 'pahvicolors'

body
  background-color pahvicream
  font 1em/1.4 "Helvetica Neue","Lucida Grande", tahoma, arial, sans-serif

h1
  font-size 3em

.remote
  margin-top 4em

.remoteItem
  cursor pointer
  background-color pahvilightbrown
  margin-bottom 10px
  padding 1em
  height 5em

  h2
    font-size 150%
    float left
  img
    float left

  &.selected
    background-color darken(pahvilightbrown, 20%)

  .contentPreview
    float right


@media screen and (min-width: 700px)
  .remoteItem
    float left
    width 300px
    margin 10px
    border-radius 5px


.footer
  clear both
  margin-top 2em
  padding 1em
  text-align center
  color black
  a
    color black


