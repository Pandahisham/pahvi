          background add_objects_icon
          &:hover
            background add_objects_icon_hover
        &:nth-child(2)
          background layers_icon
          &:hover
            background layers_icon_hover
        &:hover, &.active
          background-color white
    .scroll
      width 210px
      background-color white
      float right
      top 130px
      position fixed
      bottom 0px
      overflow auto
      .hovering
        box-shadow 0 0 2px pahvigray, 0 10px 5px pahviyellow, 0 -10px 5px pahviyellow
      .selected
        background-color pahviblue
        border 2px solid pahvigreen !important
      .layersSortable
        list-style-type none
      >div
        font-size 0.8em
        line-height 2
        margin 1em
        padding 0



.bb-layers
  .layersSortable
    list-style-type none
    margin 0
    padding 0
    li
      background-color pahvilightgray
      background-image iconurl
      background-repeat no-repeat
      border 2px solid pahvigray
      height 35px
      overflow hidden
      margin 0 0 0.5em
      padding 1em 0.5em 0 55px
      .tools
        float left
      .nameText
        float left
        overflow hidden
        width 70px
      &.hovering
        background-color pahviyellow !important
        cursor move
      .delete
        display block
        float left
        font-size 10px
        font-weight 600
        margin-left 5px
        margin-top 2px
      .visible
        display table-cell
        float left
        font-size 14px
        input
          vertical-align top
      .delete, .visible
        height 20px
        width 20px

    .text
      background-position text_icon_position
    .plain
      background-position plainbox_icon_position
    .image
      background-position image_icon_position

.draggable
  background-color pahviyellow
