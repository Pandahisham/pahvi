      background-position switch_mode_icon_position_hover


button.delete, .visible
  border 2px solid pahviyellow !important
  border-radius 20px
  background-color pahvigray
  color pahviyellow
  cursor pointer
  input
    cursor pointer
  &:hover
    background-color pahvired !important


.container
  margin 0 auto


  button
    background-color pahvicream
    border none
    box-shadow 0 -1px 2px pahvigray
    font-size 0.7em
    height 60px
    margin 0
    padding 0 0.2em 0 50px
    text-align left
    text-transform uppercase
    width 170px
    &.edit, &.delete
      background-color pahvigray
      color pahviyellow
      font-size 0.6em
    &.delete
      font-size 12px
      font-weight 600
      height 30px
      line-height 1
      padding 0
      right -15px
      text-align center
      top -15px
      width 30px

  .pasteboard
    border-top solid 1px pahvigray
    margin -1px

    .box.ui-draggable-dragging
      border dotted 2px black !important
      box-shadow 0px 0px 20px black !important
      cursor move !important
    .box.ui-draggable-dragging .tools
      border-left dotted 2px black !important
      border-right dotted 2px black !important
      border-top dotted 2px black !important
      margin-left -1px
    .box.ui-draggable
      cursor pointer


    button
      border-bottom 1px solid pahvigray


    .tools
      background rgb(226,226,226)
      background linear-gradient(top, rgba(226,226,226,0.8) 0%, rgba(242,242,242,0.8) 50%, rgba(226,226,226,0.8) 100%)
      border-left 1px solid pahvigray
      border-right 1px solid pahvigray
      border-top 1px solid pahvigray
      display block
      height 30px
      left -1px
      margin 0
      padding 0
      position absolute
      top -30px
      visibility hidden
      width 100%

    .box
      padding .25em
      border 1px solid black
      min-height 30px
      min-width 60px
      &.hovering
        box-shadow 0 3px 10px blue, 0 -3px 10px blue
      &.selected
        box-shadow 0 3px 10px pahvigreen, 0 -3px 10px pahvigreen
        .transformable-handle-rotate
          background iconurl no-repeat 0 -930px pahvigray
          border-radius 20px
          height 20px
          left -15px
          padding 5px
          top -40px !important
          width 20px
      &.hovering
        box-shadow 0 10px 10px pahviyellow, 0 -10px 10px pahviyellow
      .transformable-handle-rotate
        background none
    // Only text box needs bottom padding?
    .textBox
      padding-bottom 0.5em
      ul
        list-style disc
      ol
        list-style decimal
      li
        margin-left 2em
    .imageBox
      border 0px
      background-color transparent
      padding 0px
      img
        width 100%
        height 100%

    ul
      list-style disc
    ol
      list-style decimal
    li
      margin-left 2em

    .box .tools
      visibility hidden
      button
        position absolute
      .edit
        border-radius 10px
        height 20px
        padding 0.2em 1em
        right 2em
        top 5px
        width auto
        white-space nowrap
        &:hover
          background-color pahvigreen
      .name
        line-height 1.75
        margin-left 1em
      .down, .up
        border none
        box-shadow none
        height 25px
        padding 0
        right -15px
        text-indent -9999px
        width 30px
      .up
        background z-index_up_icon
        top 30px
        &:hover
          background z-index_up_icon_hover
      .down
        background z-index_down_icon
        top 55px
        &:hover
          background z-index_down_icon_hover
    // We need to use class hovering instean of meta selector :hover so that
    // we can also "hover" programatically using JavaScript
    .box.selected .tools
      visibility visible


  .mediamenu
    background pahvicream repeat 0 0 scroll
    border-left 1px solid pahvigray
    position fixed
    right 0
    top 82px
    bottom 0px
    z-index 13
    width 205px
    margin-right 4px

    .help
      line-height 1
      margin-top 1em
      margin-bottom 1em


    // Colorjoe sizes
    .colorConfig
      .colorPicker
        margin 0
      .colorPicker .twod, .colorPicker .twod .bg
        width 115px
        height 115px
      .colorPicker .oned, .colorPicker .oned .bg
        height 115px

    nav
      padding 0 0 0 10px
      border-bottom solid 1px bordergray
      height 47px
      a
        background-color pahvicream
        border-left solid 1px bordergray
        border-top solid 1px bordergray
        border-right solid 1px bordergray
        float left
        height 47px
        text-indent -9999px
        width 50px
