
@import 'nib'

.container
  margin 0 auto
  max-width 1920px
  min-width 600px
  position relative
  width 100%
  header
    background url("/img/header-bg.jpg") repeat 0 0 scroll
    height 100px
    width 100%
  .wrap
    position relative
    width 100%
    .pasteboard
      background url("/img/pahvi-bg.jpg") repeat 0 0 scroll
      height 700px
      margin 0
      width 100%
    .mediamenu
      background #fffdf1 repeat 0 0 scroll
      height 700px
      position absolute
      right 0
      top 0
      width 30%

// Testing only
.textBox
  position absolute
  top 200px
  left 200px
  width 500px

.textBox
  border 1px solid black

.textBox.ui-draggable
  cursor pointer

.textBox.ui-draggable-dragging
  cursor move
  box-shadow 0px 0px 10px black
