close_mediamenu_icon_position = 10px -470px
close_mediamenu_icon_position_hover = 10px -505px
open_mediamenu_icon_position = 10px -400px
open_mediamenu_icon_position_hover = 10px -435px
add_objects_icon = iconurl no-repeat 10px -745px transparent
add_objects_icon_hover = iconurl no-repeat 10px -790px white
layers_icon = iconurl no-repeat 10px -170px transparent
layers_icon_hover = iconurl no-repeat 10px -215px white
mediamenu_icon = iconurl no-repeat 10px -535px pahvicream
text_icon_position = 10px -80px
text_icon_position_hover = 10px -125px
image_icon_position = 10px 10px
image_icon_position_hover = 10px -35px
plainbox_icon_position = 10px -835px
plainbox_icon_position_hover = 10px -880px
remote_icon = iconurl no-repeat 10px -1305px pahvicream
remote_icon_position_hover = 10px -1360px


body
  font 1em/1.4 "Helvetica Neue","Lucida Grande", tahoma, arial, sans-serif
  background url("/img/pahvi-bg.jpg") repeat 0 0 scroll

strong
  font-weight bold
em
  font-style italic
pre
  font-family monaco, "Droid Sans Mono", courier, monospace

h1,h2
  margin 0
  padding 0

h1
  font-size 3em
  font-weight 800

h2
  font-size 1.5em

a
  color pahviurlblue
hr
  clear both
  border none
  float none
  height 0px
  margin 0
  width 100%

button:hover
  cursor pointer


.menu
  margin-left 40%
  button.openRemote
    background remote_icon
    &:hover
      background-position remote_icon_position_hover

  button.modeToggle
    background switch_mode_icon
