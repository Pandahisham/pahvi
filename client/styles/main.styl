@import 'nib'
bordergray = #c2c2c2
pahviyellow = #fffdf1
pahvicream = #f5f4f0
pahvigray = #363636
pahvigreen = #339900
pahvired = #FF0000
pahviblue = #A2D7F5 !important
iconurl = url("/img/iconset.png")
switch_mode_icon = iconurl no-repeat 10px -635px pahvicream
switch_mode_icon_position_hover = 10px -690px
z-index_up_icon = iconurl no-repeat 0 -270px transparent
z-index_up_icon_hover = iconurl no-repeat 0 -305px transparent
z-index_down_icon = iconurl no-repeat 0 -340px transparent
z-index_down_icon_hover = iconurl no-repeat 0 -375px transparent
close_mediamenu_icon_position = 10px -470px
close_mediamenu_icon_position_hover = 10px -505px
open_mediamenu_icon_position = 10px -400px
open_mediamenu_icon_position_hover = 10px -435px
add_objects_icon = iconurl no-repeat 10px -745px transparent
add_objects_icon_hover = iconurl no-repeat 10px -790px white
layers_icon = iconurl no-repeat 10px -170px transparent
layers_icon_hover = iconurl no-repeat 10px -215px white
mediamenu_icon = iconurl no-repeat 10px -535px pahvicream
text_icon_position = 10px -80px
text_icon_position_hover = 10px -125px
image_icon_position = 10px 10px
image_icon_position_hover = 10px -35px
plainbox_icon_position = 10px -835px
plainbox_icon_position_hover = 10px -880px

body
  font 1em/1.4 "Helvetica Neue","Lucida Grande", tahoma, arial, sans-serif
  
h1,h2
  margin 0
  padding 0
  
h1
  font-size 3em
  
h2
  font-size 1.5em
  
hr
  clear both
  border none
  float none
  height 0px
  margin 0
  width 100%
  
button:hover
  cursor pointer
  
.container
  height 100%
  margin 0 auto
  overflow auto
  position relative
  width 100%
  
  button
    background-color pahvicream
    border none
    font-size 0.7em
    height 60px
    margin 0
    padding 0 0.2em 0 50px
    text-align left
    text-transform uppercase
    word-wrap break-word
    width 140px
    &.edit, &.delete
      background-color pahvigray
      color pahviyellow
      font-size 0.6em
    &.delete
      border 2px solid pahviyellow !important
      border-radius 20px
      font-size 12px
      font-weight 600
      height 30px
      line-height 1
      padding 0
      right -15px
      text-align center
      top -15px
      width 30px
      &:hover
        background-color pahvired !important
        
  header
    background url("/img/header-bg.jpg") repeat 0 0 scroll
    height 65px
    padding 1em 1em 0 1em
    position relative
    width 100%
    hgroup
      margin -0.5em 0
      text-align center
      width 150px
    h1,h2
      color pahviyellow
      line-height 1
      text-shadow 0 -1px 3px black, 0 2px 2px pahvigray
      text-transform uppercase
    h2
      font-size 0.8em
      
  .wrap
    height 100%
    position relative
    width 100%
    
    .pasteboard
      background url("/img/pahvi-bg.jpg") repeat 0 0 scroll
      border solid 1px pahvigray
      height 100%
      margin 0
      position relative
      width 100%
      z-index 1
      
      .textBox.ui-draggable-dragging
        border dotted 2px black !important
        box-shadow 0px 0px 10px black
        cursor move !important
      .textBox.ui-draggable
        cursor pointer
        
      .menu
        margin 0 5px 0
        position absolute
        right 30%
        top -60px
      .modeToggle
        background switch_mode_icon
        border-bottom 1px solid pahvigray
        &:hover
          background-position switch_mode_icon_position_hover

      .tools
        background-color #f3f3f3
        border-left 1px solid pahvigray
        border-right 1px solid pahvigray
        border-top 1px solid pahvigray
        display block
        height 30px
        left -1px
        margin 0
        padding 0
        position absolute
        top -30px
        visibility hidden
        width 100%

      .box
        padding .25em
        
      .textBox
        border 1px solid black
        min-height 100px
        min-width 100px
        padding-bottom 0.5em
        &.hovering
          box-shadow 0 3px 5px pahvigreen, 0 -3px 5px pahvigreen
      .textBox .tools
        visibility hidden
        button
          position absolute
        .edit
          border-radius 10px
          height 20px
          padding 0.2em 1em
          right 2em
          top 5px
          width auto
          white-space nowrap
          &:hover
            background-color pahvigreen
        .name
          margin-left 0.5em
        .down, .up
          height 25px
          padding 0
          right -15px
          text-indent -9999px
          width 30px
        .up
          background z-index_up_icon
          top 30px
          &:hover
            background z-index_up_icon_hover
        .down
          background z-index_down_icon
          top 60px
          &:hover
            background z-index_down_icon_hover            
      // We need to use class hovering instean of meta selector :hover so that
      // we can also "hover" programatically using JavaScript
      .textBox.hovering .tools
        visibility visible
        
    .mediamenu.open
      .closeOpenMediamenuBtn
        background-position close_mediamenu_icon_position
        &:hover
          background-position close_mediamenu_icon_position_hover
    .mediamenu.closed
      .closeOpenMediamenuBtn
         background-position open_mediamenu_icon_position
         &:hover
          background-position open_mediamenu_icon_position_hover
          
    .mediamenu
      background pahvicream repeat 0 0 scroll
      border-top 1px solid pahvigray
      border-left 1px solid pahvigray
      height 100%
      position absolute
      right 0
      top 0
      width 30%
      z-index 9999
      .closeOpenMediamenuBtn
        background-color rgba(255,253,241,0.7)
        background-image iconurl 
        background-repeat no-repeat 
        border-top-left-radius 10px 15px 
        border-bottom-left-radius 10px 15px
        left -55px
        height 35px
        position absolute
        text-indent -9999px
        top 40%
        width 55px
      nav
        height 50px
        margin 0 0 0 5px
        width 100%
        a
          background-color pahvicream
          border-left solid 1px bordergray
          border-top solid 1px bordergray
          border-right solid 1px bordergray
          float left
          height 50px
          text-indent -9999px
          width 50px
          &:first-child
            background add_objects_icon
            &:hover
              background add_objects_icon_hover
          &:nth-child(2)
            background layers_icon
            &:hover
              background layers_icon_hover
          &:hover, &.active
            background-color white
      .mediamenuBtn
        background mediamenu_icon
        left 5px
        position absolute
        top -60px
        
      .media
        background-color white
        border-top solid 1px bordergray
        display block
        height 100%
        width 100%
        .layersSortable 
          list-style-type none
        >div
          font-size 0.8em
          line-height 2
          margin 1em
          padding 0
          
        .addElements
          div
            background-color pahviyellow
            border dotted 2px pahvigray
            cursor move
            height 35px
            margin 0 0 0.5em
            padding 1em 0.5em 0 55px
            text-align center
            text-transform uppercase
            width 80%
          .textbox
            background-image iconurl
            background-position text_icon_position
            background-repeat no-repeat
            &:hover
              background-position text_icon_position_hover
          .plainbox
            background-image iconurl
            background-position plainbox_icon_position
            background-repeat no-repeat
            &:hover
              background-position plainbox_icon_position_hover
          .imagebox
            background-image iconurl
            background-position image_icon_position
            background-repeat no-repeat
            &:hover
              background-position image_icon_position_hover
          .text
            background iconurl no-repeat 0 -75px transparent
          .image
            background iconurl no-repeat 0 10px transparent
            h2
              margin 0 0 0.5em
              background-position 10px -35px
        .layers
          .layersSortable 
            list-style-type none
            margin 0
            padding 0
            li
              background-color #f3f3f3
              background-image iconurl
              background-repeat no-repeat
              border 2px solid pahvigray
              height 35px
              margin 0 0 0.5em
              padding 1em 0.5em 0 55px
              position relative
              width 80%
              &:hover
                background-color pahviyellow
                cursor pointer
              &:hover > .delete
                display block
              .delete
                display none
                margin-right 10px
                position absolute
                right 0
                top 10px
            .text
              background-position text_icon_position
            .image
              background-position image_icon_position
          .layerProperties
            margin 0
            padding 0
            >div
              border 1px solid black
              margin 0
              padding 1em 50px 1em 1em
              width 80%
            h2
              margin 0 0 0.25em
              padding 0
            figure
              float left
              margin 0
              padding 0 1em 0 0
            span
              font-size 0.7em
              display block
              padding 0
              margin 0 0 0.2em
              text-align center
            .colorPicker
              background-color pahvigreen
              border 2px solid black
              height 80px
              width 80px
.selected
  background-color pahviblue
  border 2px solid pahvigreen !important

// Testing only
.textBox
  background-color white

.hallotoolbar
  z-index 2001

body.presentation
  .box
    background-color transparent !important
    box-shadow none !important
    cursor url("/img/zoom-cursor.png") 15 15, pointer
    .content
      padding 0 !important
  .pasteboard
    cursor url("/img/zoom-out-cursor.png") 15 15, pointer
  .textBox .tools
    display none !important
  .mediamenu
    display none


.box
  position absolute

// Make sure that in edit mode the selected box is always on top regardless
// the layer positioning so that it is possible to edit it.
.editing
  z-index 2000 !important

.pahvi
  width 100%
  height 100%
